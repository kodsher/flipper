{
  "manifest_version": 3,
  "name": "Facebook Marketplace Scraper",
  "version": "1.2",
  "description": "Automated Facebook Marketplace phone listings scraper",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://www.facebook.com/*",
    "https://facebook.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "FB Marketplace Scraper"
  },
  "icons": {
    "16": "icon16.svg",
    "48": "icon48.svg",
    "128": "icon128.svg"
  }
}